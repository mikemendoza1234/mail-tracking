{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run migrate",
        "nixpacksPlanPath": "./nixpacks.toml"
    },
    "deploy": {
        "numReplicas": 2,
        "restartPolicyType": "ON_FAILURE",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 30,
        "sleepApplication": false
    }
}